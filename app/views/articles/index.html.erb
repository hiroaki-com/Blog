<div class= "container　default-padding" >
 <div class="row articles" > 
   <% @articles.each do |article| %>
    <%= link_to article do %>
     <div class = "col-xs-5 col-md-3 margin-top-2per margin-right-1per margin-left-1per article-block padding-top-15 ">
      <% if article.image_id.present? %>
       <%= image_tag attachment_url(article, :image), class: 'img-responsive article-list-image'%>   
      <% else %>
       <%= image_tag  'tvtou.JPG', class: 'img-responsive article-list-image' %>   
      <% end %>
       <div class= "padding-top-15 title-text-overflow" >        
       <p class= "title"><%= article.title %></p> 
       <p class= "text-right time-font-index">
        <%= article.created_at.strftime('%Y.%m.%d %H:%M') %>        
       </p> 
       </div> 
     </div>  
    <% end %>   
   <% end %>
  </div>
  
  <div class="centering">
    <p class="index-new-btn" ><%= link_to '新規作成' , new_article_path,class: 'btn btn-primary' ,style: 'margin: 40px 0 10px' %></p>
    <p class="position"><%= link_to(root_path) do %><i class="fas fa-home icon fa-1x" title="Top"></i><% end %></p>
  </div>

