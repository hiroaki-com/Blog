<div class= "container new-padding" > 
<h2 class="text-center">ログイン</h2>
<%= link_to 'ゲストログイン（見ていただく用）', users_guest_sign_in_path, method: :post, class: 'btn btn-danger', style: 'margin: 20px 0' %>

 <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div class="form-group">
     <%= f.label :email, 'メールアドレス' %><br />
     <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control',placeholder: "input your email"  %>
   </div>

   <div class="form-group">
     <%= f.label :password, 'パスワード' %><br />
     <%= f.password_field :password, autocomplete: "current-password" , class: 'form-control',placeholder: "input your password" %>
   </div>

   <% if devise_mapping.rememberable? %>
     <div class="form-group">
       <%= f.check_box :remember_me %>
       <%= f.label :remember_me, 'ログインを記憶' %>
     </div>
   <% end %>

   <div class="actions">
     <%= f.submit "ログイン", class: 'btn btn-success' %>
   </div>
 <% end %>

  <%= render "devise/shared/links" %>

  <%= link_to '管理者ログイン', "/admin", style: 'margin: 20px 0' %>

</div>